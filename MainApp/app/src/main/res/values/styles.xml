<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QText" parent="">
        <item name="android:textColorHint">@color/fullBlack</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/fullBlack</item>
    </style>

    <style name="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="myCardView">
        <item name="cardPreventCornerOverlap">true</item>
        <item name="cardUseCompatPadding">true</item>
        <item name="android:clickable">false</item>
        <item name="android:focusable">true</item>
        <item name="cardElevation">0.5dp</item>
        <item name="cardBackgroundColor">#ffffff</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

</resources>
